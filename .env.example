# Registry Domain Configuration
# Your domain name for the registry (e.g., registry.example.com)
REGISTRY_DOMAIN=registry.example.com

# Caddy Server Name (usually same as REGISTRY_DOMAIN)
CADDY_SERVER_SERVER_NAME=registry.example.com

# Email for Let's Encrypt SSL certificates
ACME_EMAIL=admin@example.com

# Registry HTTP Secret (generate with: openssl rand -hex 32)
REGISTRY_HTTP_SECRET=changeme_generate_random_secret

# Storage Backend (filesystem recommended for single-node setup)
REGISTRY_STORAGE_FILESYSTEM_ROOTDIRECTORY=/data

# Optional: Registry Storage Cache (improve performance)
REGISTRY_STORAGE_CACHE_BLOBDESCRIPTOR=inmemory

# Optional: Delete images (set to true to allow image deletion)
REGISTRY_STORAGE_DELETE_ENABLED=true

# Optional: Garbage Collection (set to readonly for GC operations)
# REGISTRY_STORAGE_MAINTENANCE_READONLY={"enabled":false}

# Optional: Registry Log Level (error, warn, info, debug)
REGISTRY_LOG_LEVEL=info

# Optional: Max concurrent uploads
REGISTRY_HTTP_MAXCONCURRENTUPLOADS=5

# Optional: Timeouts
REGISTRY_HTTP_TIMEOUT_READ=5m
REGISTRY_HTTP_TIMEOUT_WRITE=10m

# Optional: Health check interval
REGISTRY_HEALTH_STORAGEDRIVER_ENABLED=true
REGISTRY_HEALTH_STORAGEDRIVER_INTERVAL=10s
REGISTRY_HEALTH_STORAGEDRIVER_THRESHOLD=3

# Deployment Configuration (used in CI/CD)
DEPLOY_HOST=your-server-ip
DEPLOY_PORT=22
DEPLOY_USER=deploy
DEPLOY_PATH=/opt/docker-registry
